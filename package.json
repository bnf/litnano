{
  "name": "litnano",
  "version": "0.3.2",
  "description": "Minify HTML markup inside lit tagged template literals",
  "license": "MIT",
  "keywords": [
    "lit",
    "lit-html",
    "htmlnano",
    "cssnano",
    "minify",
    "html",
    "css",
    "template",
    "tagged",
    "literals",
    "ast"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bnf/litnano.git"
  },
  "author": "Benjamin Franzke <ben@bnf.dev>",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./esm/index.d.ts",
        "default": "./esm/index.js"
      },
      "require": {
        "types": "./cjs/index.d.ts",
        "default": "./cjs/index.js"
      }
    },
    "./rollup": {
      "import": {
        "types": "./esm/rollup.d.ts",
        "default": "./esm/rollup.js"
      },
      "require": {
        "types": "./cjs/rollup.d.ts",
        "default": "./cjs/rollup.js"
      }
    }
  },
  "scripts": {
    "clean": "rm -rf cjs esm",
    "prebuild": "npm run clean",
    "preversion": "npm run build",
    "postversion": "git push --follow-tags",
    "build:esm": "tsc --outDir esm",
    "build:cjs": "tsc --module commonjs --outDir cjs",
    "postbuild:cjs": "echo '{\"type\": \"commonjs\"}' > cjs/package.json",
    "build": "npm run build:esm && npm run build:cjs",
    "test": "ava tests/litnano.js tests/litnano.cjs"
  },
  "devDependencies": {
    "@rollup/plugin-terser": "^0.4.4",
    "@types/node": "^22.13.10",
    "acorn": "^8.14.1",
    "astring": "^1.9.0",
    "ava": "^6.2.0",
    "cssnano": "^7.0.6",
    "htmlnano": "^2.1.1",
    "magic-string": "^0.30.17",
    "rollup": "^4.35.0",
    "terser": "^5.39.0",
    "typescript": "^5.8.0"
  },
  "dependencies": {
    "acorn-walk": "^8.3.4"
  },
  "optionalDependencies": {
    "magic-string": ">= 2.0"
  },
  "peerDependencies": {
    "posthtml": ">= 0.16",
    "htmlnano": ">= 2.0"
  }
}
